<input
  class="shadow appearance-none border rounded w-2/3 py-2 px-3 text-grey-darker leading-tight"
  id="{{ name }}"
  name="{{ name }}"
  type="{{ type ? type : 'text' }}"
  @if(placeholder)
    placeholder="{{ placeholder }}"
  @endif
  @if(value)
    value="{{ value }}"
  @endif
  {{ required ? 'required' : null }}
>
